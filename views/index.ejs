    <title>To Do List</title>
</head>

  <body>
    <div class="container">
      <h1>To Do List</h1>
      <form class="task-form" action="/mytodo" method="POST">
          <input type="text" class="task-input" placeholder="Add todos.."  name="newItem" required>

        <button type="submit" class="addBtn">Add</button>

        
       
      </form>

      <ul class="task-list">
        <% for (var i = 0; i < todoList.length; i++) { %>
          <li class="task-item">
            <span class="task-description"><%= todoList[i].name %></span>
            <form class="delete-form" action="/delete/<%= todoList[i]._id %>" method="POST">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </li>
        <% } %>
      </ul>
      
